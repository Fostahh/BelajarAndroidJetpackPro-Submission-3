<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_light_blue_400"
    tools:context=".ui.activities.SplashActivity"
    tools:ignore="Overdraw">

    <ImageView
        android:id="@+id/imageViewLogoPNJ"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="196dp"
        app:layout_constraintEnd_toStartOf="@+id/imageViewLOgoCitiAsia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_pnj" />

    <ImageView
        android:id="@+id/imageViewLOgoCitiAsia"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="196dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageViewLogoPNJ"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_citiasia" />

    <TextView
        android:id="@+id/textViewNamaMahasiswa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/nama_mahasiswa"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLogoPNJ" />
</androidx.constraintlayout.widget.ConstraintLayout>